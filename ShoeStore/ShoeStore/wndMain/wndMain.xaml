<Window x:Class="mainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="All_InvoicesDataGrid" HorizontalAlignment="Left" Height="290" Margin="10,37,0,0" VerticalAlignment="Top" Width="464"/>
        <Border HorizontalAlignment="Left" Height="100" Margin="479,55,0,0" VerticalAlignment="Top" Width="100" OpacityMask="Black" BorderBrush="Black" Background="Black">
            <Image x:Name="BootImage" OpacityMask="#FFD82020"/>

        </Border>
        <Button x:Name="CreateInvoice" Content="Create" HorizontalAlignment="Left" Margin="504,200,0,0" VerticalAlignment="Top" Width="75" Click="CreateInvoice_Click"/>
        <Button x:Name="EditInvoice" Content="Edit" HorizontalAlignment="Left" Margin="504,247,0,0" VerticalAlignment="Top" Width="76" Click="EditInvoice_Click"/>
        <Button x:Name="DeleteInvoice" Content="Delete" HorizontalAlignment="Left" Margin="505,296,0,0" VerticalAlignment="Top" Width="75" Click="DeleteInvoice_Click"/>
        <Menu x:Name="MenuTabs" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" VerticalAlignment="Top" Width="110" FontSize="15">
            <MenuItem x:Name="searchTab" Header="Search" Width="54" StaysOpenOnClick="True" Click="SearchTab_Click"/>
            <MenuItem x:Name="itemsTab" Header="Items" Width="55" Click="ItemsTab_Click"/>
        </Menu>


    </Grid>
</Window>
